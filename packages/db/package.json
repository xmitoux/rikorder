{
  "name": "@repo/db",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "pnpm db:mg && tsc",
    "build:backend": "prisma migrate deploy && prisma generate && tsc",
    "build:frontend": "prisma generate && tsc",
    "prisma:dev": "dotenv -e ../../.env -- prisma",
    "db:generate": "prisma generate",
    "db:push": "pnpm prisma:dev db push --skip-generate",
    "db:mg": "pnpm prisma:dev migrate dev",
    "lint": "eslint \"**/*.ts\" --fix"
  },
  "dependencies": {
    "@prisma/client": "5.15.0",
    "prisma": "5.15.0",
    "typescript": "^5.5.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "eslint": "^9.5.0"
  }
}
